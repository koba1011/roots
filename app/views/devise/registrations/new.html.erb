<%= render "shared/second-header"%>


<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      登録して世界の動画をチェックしよう
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"フルネーム", maxlength:"40" %>
  </div>
  <div class="form-group">
    <%= f.text_area :user_name, class:"input-default", id:"username", placeholder:"ユーザーネーム", maxlength:"40" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス" %>
  </div>
  <div class="form-group">
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"パスワード確認" %>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      登録することで、<span>利用規約</span>
      <br>に同意するものとします。
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "登録する" ,class:"register-blue-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
