<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'login-main', local: true do |f| %>
<div class='form-wrap'>
  <h2 class="login-text">Rootsにログイン</h2>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-blue-btn" %>
  </div>
  <%= link_to "アカウント作成", new_user_registration_path, class: "login-link"%>
</div>
<% end %>